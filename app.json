{
    "id": "image.grabber",
    "sdk": 2,
    "name": {
        "en": "Image Grabber"
    },
    "version": "0.1.3",
    "compatibility": ">=1.5.0",
    "author": {
        "name": "Chamid Media",
        "email": "info@chamidmedia.nl"
    },
    "category": "tools",
    "images": {
      "large": "./assets/images/large.jpg",
      "small": "./assets/images/small.jpg"
    },
    "description": {
    	"en": "Input the URL to an image to grab it as a Homey image token. You can use this token, for example, with the Telegram app or email-sender app",
    	"nl": "Geef een URL van een afbeelding op, om de afbeelding op te slaan in een Homey image token. Deze kan dan worden gebruikt met andere apps, om de afbeelding via E-mail, Telegram e.d. te verzenden."
    },
    "contributing": {
        "donate": {
            "paypal": {
                "email": "info@chamidmedia.nl",
                "currency": "EUR"
            }
        }
    },
    "tags": {
	  "en": [ "image", "webcam", "camera" ],
	  "nl": [ "image", "webcam", "camera", "afbeelding"] 
    },
    "flow": {
		"triggers": [
	      {
	        "id": "imagegrabbed",
	        "title": {
	          "en": "An image is grabbed",
	          "nl": "Een afbeelding is opgehaald"
	        },
	        "tokens": [
	            {
	                "name": "image",
	                "title": {
	                    "en": "image"
	                },
	                "type": "image"
	            },
	            {
	                "name": "url",
	                "title": {
	                    "en": "URL"
	                },
	                "example": "http://"
	            }
	        ]
	      }
	    ],
	    "actions": [
        {
            "id": "grabimage",
            "title": {
                "en": "Grab image",
                "nl": "Haal afbeelding op"
            },
            "args": [
	              {
		              "name": "url",
		              "type": "text",
		              "placeholder": {
			              "en": "URL",
			              "nl": "URL"
		              }
	              }
	        ]
        },
        {
            "id": "grabprotectedimage",
            "title": {
                "en": "Grab password protected image",
                "nl": "Haal beveiligde afbeelding op"
            },
            "args": [
	              {
		              "name": "url",
		              "type": "text",
		              "placeholder": {
			              "en": "URL",
			              "nl": "URL"
		              }
	              },
	              {
		              "name": "username",
		              "type": "text",
		              "placeholder": {
			              "en": "User",
			              "nl": "User"
		              }
	              },
	              {
		              "name": "password",
		              "type": "text",
		              "placeholder": {
			              "en": "Pass",
			              "nl": "Pass"
		              }
	              },
	              {
		              "name": "sendImmediately",
		              "type": "dropdown",
		              "values": [
		              {"id": "true", "label": {"en": "Send login Immediately", "nl": "Direct inloggen"}},
		              {"id": "false", "label": {"en": "Don't send login immediately", "nl": "Niet direct inloggen"}}
		              ]
	              }
	        ]
        }
        ]
    }
}
